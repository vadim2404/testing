{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Список вопросов</h1>

    <ul>
        <li>
            <a href="{{ path('question_new') }}">
                Добавить новый вопрос
            </a>
        </li>
    </ul>
                
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Вопрос</th>
                <th>Тема</th>
                <th>Предмет</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.question }}</td>
                <td>{{ entity.theme.name }}</td>
                <td>{{ entity.theme.subject.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('question_show', { 'id': entity.id }) }}">Показать</a>
                    </li>
                    <li>
                        <a href="{{ path('question_edit', { 'id': entity.id }) }}">Редактировать</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
<div class="pagination">
    {{ knp_pagination_render(entities) }}
</div>

    {% endblock %}
