{% extends "::base.html.twig" %}

{% block body %}
     <h1>Непроверенные результаты</h1>

     <table class="table table-hover">
        <thead>
            <tr>
                <th>Тест</th>
                <th>Предмет</th>
                <th>ФИО студента</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td>{{ result.test.title }}</td>
                <td>{{ result.test.subject.name }}</td>
                <td>{{ result.student.lastName }}&nbsp;{{ result.student.firstName }}&nbsp;{{ result.student.middleName|default('') }}</td>
                <td>
                <ul>
                    <li><a href="{{ path('teacher_result_verify_test', { 'id' : result.id }) }}">Проверить</a></li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
