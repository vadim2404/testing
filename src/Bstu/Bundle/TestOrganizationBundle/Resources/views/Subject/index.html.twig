{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Список предметов</h1>

    <ul>
        <li>
            <a href="{{ path('subject_new') }}">
                Добавить новый предмет
            </a>
        </li>
    </ul>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('subject_show', { 'id': entity.id }) }}">Показать</a>
                    </li>
                    <li>
                        <a href="{{ path('subject_edit', { 'id': entity.id }) }}">Редактировать</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="pagination">
    {{ knp_pagination_render(entities) }}
</div>


    {% endblock %}
