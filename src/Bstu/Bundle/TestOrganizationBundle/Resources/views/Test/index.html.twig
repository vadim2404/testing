{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Test list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Title</th>
                <th>Maxquestions</th>
                <th>Complexity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('test_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.maxQuestions }}</td>
                <td>{{ entity.complexity }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('plan_new', { 'testId' : entity.id }) }}">plan</a>
                    </li>
                    <li>
                        <a href="{{ path('test_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('test_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    {% if entity.isTestByVariants() %}
                    <li>
                        <a href="{{ path('variant', { 'id' : entity.id}) }}">Manage variants</a>
                    </li>
                    {% endif %}
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
<div class="pagination">
    {{ knp_pagination_render(entities) }}
</div>

        <ul>
        <li>
            <a href="{{ path('test_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
